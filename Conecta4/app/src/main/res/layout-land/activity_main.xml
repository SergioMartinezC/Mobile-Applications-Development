<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button style="@style/menu_buttons"
            android:text="@string/play"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:id="@+id/button_play"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@+id/button_exit" android:layout_marginTop="111dp"
            app:layout_constraintEnd_toEndOf="@+id/button_load_game" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button_load_game" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button style="@style/menu_buttons"
            android:text="@string/load_game"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:id="@+id/button_load_game"
            app:layout_constraintStart_toStartOf="@+id/button_exit"
            app:layout_constraintEnd_toEndOf="@+id/button_exit"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_play" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_exit"/>
    <Button style="@style/menu_buttons"
            android:text="@string/exit"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:id="@+id/button_exit"
            android:layout_marginBottom="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="26dp"/>

</android.support.constraint.ConstraintLayout>