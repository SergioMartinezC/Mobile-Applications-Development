<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.PopUp"
        android:background="@drawable/pop_bg">


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridLayout"
            android:gravity="center">
        <TableRow
                android:id="@+id/save_row"
                style="@style/table_menu"
                android:layout_marginBottom="25dp">
            <Button style="@style/game_menu_button"
                    android:text="Guardar Partida"
                    android:id="@+id/save_game"
            />
        </TableRow>
        <TableRow
                android:id="@+id/load_row"
                style="@style/table_menu"
                android:layout_marginBottom="25dp">
            <Button style="@style/game_menu_button"
                    android:text="Cargar Partida"
                    android:id="@+id/load_game"/>
        </TableRow>
        <TableRow
                android:id="@+id/new_game_row"
                style="@style/table_menu"
                android:layout_marginBottom="25dp">
            <Button style="@style/game_menu_button"
                    android:text="Empezar nueva partida"
                    android:id="@+id/new_game"/>
        </TableRow>

        <TableRow
                style="@style/table_menu"
                android:id="@+id/main_menu_row"
                android:layout_marginBottom="25dp">
            <Button style="@style/game_menu_button"
                    android:text="Menu principal"
                    android:id="@+id/main_menu"/>
        </TableRow>

        <TableRow
                style="@style/table_menu"
                android:id="@+id/back_row">
            <ImageButton
                style="@style/back_button"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_back"/>
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>