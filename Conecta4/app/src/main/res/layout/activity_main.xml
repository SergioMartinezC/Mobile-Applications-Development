<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".Activities.MainActivity">

    <Button style="@style/menu_buttons"
            android:text="@string/play"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:id="@+id/button_play"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/button_load_game" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp"/>
    <Button style="@style/menu_buttons"
            android:text="@string/load_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_load_game" app:layout_constraintTop_toBottomOf="@+id/button_play"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="@+id/button_exit"
            app:layout_constraintBottom_toTopOf="@+id/button_exit"
            app:layout_constraintStart_toStartOf="@+id/button_exit"/>
    <Button style="@style/menu_buttons"
            android:text="@string/exit"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:id="@+id/button_exit" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button_load_game" android:layout_marginBottom="70dp"/>

</android.support.constraint.ConstraintLayout>