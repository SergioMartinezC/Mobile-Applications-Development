<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/marmol_background"
        tools:context=".Activities.MainActivity" tools:layout_editor_absoluteY="81dp">
    <TableLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gridLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="25dp">
        <TableRow
            android:layout_marginBottom="5dp">
            <Button style="@style/menu_buttons"
                    android:text="@string/play"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:id="@+id/button_play"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="5dp">
            <Button style="@style/menu_buttons"
                    android:text="@string/load_game"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:id="@+id/button_load_game"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="0dp"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="5dp">
            <Button style="@style/menu_buttons"
                    android:text="@string/options"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:id="@+id/button_preferences"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="5dp">
            <Button style="@style/menu_buttons"
                    android:text="@string/exit"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:id="@+id/button_exit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>