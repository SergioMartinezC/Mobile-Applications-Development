<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageButton
            android:id="@+id/blue_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginTop="71dp"
            android:background="@android:color/transparent"
            android:src="@drawable/token_blue_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/pink_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="68dp"
            android:background="@android:color/transparent"
            android:src="@drawable/token_pink_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/green_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="216dp"
            android:layout_marginTop="68dp"
            android:background="@android:color/transparent"
            android:src="@drawable/token_green_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:id="@+id/red_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="136dp"
            android:background="@android:color/transparent"
            android:src="@drawable/token_red_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:id="@+id/yellow_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="136dp"
            android:background="@android:color/transparent"
            android:src="@drawable/token_yellow_48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button style="@style/menu_buttons"
            android:text="@string/start_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_start_game"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="296dp"
            android:layout_marginStart="148dp"/>
    <Button
            android:text="Player vs Plater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pvp"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/pve" app:layout_constraintEnd_toStartOf="@+id/pve"
            android:layout_marginEnd="5dp"/>
    <Button
            android:text="Player vs CPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pve" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/button_start_game" app:layout_constraintStart_toEndOf="@+id/pvp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>